@page
@model MascotaFeliz.App.Pages.ListaMascotasModel
@{
}


<h1>Lista Mascotas</h1>
<a class = "btn btn-primary table-btn" asp-page="./EditarMascotas" class="btn-default">Adicionar Mascota</a>
<div class="prueba3">
<table class="table">
    <tr>
    
        <th>Nombres</th>
        <th>Especie</th>
    </tr>
    @foreach (var mascota in Model.listaMascotas)
    {
        <tr>

            <td>@mascota.Nombre</td>
            <td>@mascota.Especie</td>
        
            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetallesMascotas" asp-route-mascotaId="@mascota.Id">
                    Detalle Mascota
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./EditarMascotas" asp-route-mascotaId="@mascota.Id">
                    Editar Mascota
                </a>
            </td>
            

        </tr>
    }
</table>
</div>